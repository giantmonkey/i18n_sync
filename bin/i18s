#!/usr/bin/env ruby
#
#  I18S
#
#  Created on 2010-5-17.
#  Copyright (c) 2008. All rights reserved.
#
begin
  require 'rubygems'
rescue LoadError
  # no rubygems to load, so we fail silently
end
require 'optparse'
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'i18n_sync'

Options = {}

parser = OptionParser.new do |opts|
  opts.banner = <<BANNER
I18N Sync

Usage: #{File.basename($0)} <path/to/master.yml> [args]

Options are:

     -O --no-order  -  Order by name
     -t --trace     -  Be more verbose

Common usage:

   i18s ./en-US.yml

BANNER
  opts.on("-O", "--no-order", "Table order" ) { Options[:order] = false }
  opts.on("-t", "--trace") { Options[:trace] = true }
  opts.parse!(ARGV)
end

if ARGV.empty?
  puts parser.banner
  exit
else
  I18S.new ARGV, Options # ARGF
end
